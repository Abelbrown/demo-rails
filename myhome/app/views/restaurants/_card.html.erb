<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://unsplash.it/200/200');">
  <div class="card-category">French</div>
  <div class="card-description">
    <h2><%= restaurant.name%></h2>
    <p><%= restaurant.address%></p>
    <% restaurant.stars.times do  %>
      <i class="fa fa-star"></i>
    <% end %>
  </div>
  <img class="card-user avatar" src="user.jpg">

  <%= link_to "", restaurant_path(restaurant), class: "card-link" %>
  <!-- <a class="card-link" href="#" ></a> -->
</div>
